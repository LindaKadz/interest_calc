<p id="notice"><%= notice %></p>

<% if @calculator.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@calculator.errors.count, "error") %> prohibited
        this article from being saved:
      </h2>
      <ul>
        <% @calculator.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<%= link_to 'History', calculators_path %>

<%= form_with scope: :calculator, url: calculators_path, local: true do |f| %>
  <p>
  <%= f.label :principle %>
  <%= f.text_field :principle %>
  </p>
  <p>
  <%= f.label :rate %>
  <%= f.text_field :rate %>
  </p>
  <p>
  <%= f.label :year %>
  <%= f.text_field :year %>
  </p>
  <p><%= f.submit 'Calculate' %></p>
<% end %>
